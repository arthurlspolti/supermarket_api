generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Class {
  id          Int           @id @default(autoincrement())
  name        String
  shelf       Int?
  Shelf       Shelf?        @relation(fields: [shelf], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_class_shelf")
  ClassSelect ClassSelect[]
  Products    Products[]

  @@index([shelf], map: "fk_class_shelf")
}

model ClassSelect {
  id    Int   @id @default(autoincrement())
  user  Int
  class Int
  Class Class @relation(fields: [class], references: [id], map: "ClassSelect_id_class_fkey")
  Users Users @relation(fields: [user], references: [id], map: "ClassSelect_id_user_fkey")

  @@index([class], map: "ClassSelect_id_class_fkey")
  @@index([user], map: "ClassSelect_id_user_fkey")
}

model Products {
  id           Int      @id
  name         String?  @db.VarChar(255)
  class        Int?
  preco__      Decimal? @map("preco\u001f\u001f") @db.Decimal(5, 2)
  porcent_desc Decimal? @db.Decimal(5, 2)
  url_img      String?  @db.VarChar(255)
  Class        Class?   @relation(fields: [class], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Products_ibfk_1")

  @@index([class], map: "Products_ibfk_1")
}

model Shelf {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(255)
  Class Class[]
}

model Users {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique(map: "users_email_user_key")
  password    String
  ClassSelect ClassSelect[]
}
