generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ClassSelect {
  id    Int      @id @default(autoincrement())
  user  Int
  class Int
  Class Category @relation(fields: [class], references: [id], map: "ClassSelect_id_class_fkey")
  Users Users    @relation(fields: [user], references: [id], map: "ClassSelect_id_user_fkey")

  @@index([class], map: "ClassSelect_id_class_fkey")
  @@index([user], map: "ClassSelect_id_user_fkey")
}

model Products {
  id                  Int       @id
  name                String?   @db.VarChar(255)
  category            Int?
  base_price          Decimal?  @db.Decimal(5, 2)
  discount_percentage Decimal?  @db.Decimal(5, 2)
  image_url           String?   @db.VarChar(255)
  aisle               Int
  Category            Category? @relation(fields: [category], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Products_ibfk_1")

  @@index([category], map: "Products_ibfk_1")
}

model Users {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique(map: "users_email_user_key")
  password    String
  ClassSelect ClassSelect[]
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  localization Int
  ClassSelect  ClassSelect[]
  Products     Products[]
}
